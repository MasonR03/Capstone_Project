PORT=8082

# --- Postgres (docker-compose.yml) ---
# Defaults are safe for local dev- ec2 uses github secret
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=orbitfall
DB_BIND_ADDR=127.0.0.1
DB_PORT=5432
HOST_PORT=8082

# If you run the Node server on your machine, connect to Postgres via localhost:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/orbitfall?schema=public"

# Set to 1 to skip auto DB bootstrap when running `npm run server`
SKIP_DB_BOOTSTRAP=0
